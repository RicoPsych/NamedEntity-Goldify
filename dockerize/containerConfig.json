{
    "languageTool":{
        "request":{
            "url":"http://localhost:8010/v2/check",
            "paramsss":"text=$TEXT_DATA$&language=en-US&enabledOnly=false",
            "json_params":{
                "text":"$TEXT_DATA$",
                "language":"en-US",
                "enabledOnly":false
            }
        },
        "docker":{  
            "name":"languagetool",
            "image":"erikvl87/languagetool",
            "ports": {"8010/tcp":"8010"},
            "environment":{
                "Java_Xms":"512m", 
                "Java_Xmx":"2g"
            }
        }
    },
    "dbpedia_spotlight":{
        "for_completeness": true,
        "request":{
            "url":"http://localhost:2222/rest/annotate", 
            "body":"text=$TEXT_DATA$&confidence=0.35",
            "json_paramss":{
                "text":"$TEXT_DATA$",
                "confidence":"0.35"
            },
            "headers":{
                "content-type":"application/x-www-form-urlencoded",
                "Accept":"application/json"
            },
            "temp":{"Accept":"text/turtle"}
        },
        "docker":{   
            "name":"dbpedia-spotlight.en",
            "image":"dbpedia/dbpedia-spotlight",
            "ports": {"80/tcp":"2222"},
            "stdin_open":true,
            "tty":true,
            "mounts":[
                {
                    "source":"spotlight-model", 
                    "target":"/opt/spotlight",
                    "type":"volume"
                }
            ],
            "command":"spotlight.sh en"
        }
    },
    "stanford_ner":{
        "for_completeness": true,
        "request":{
            "url":"http://localhost:9000/",
            "params":"properties={\"outputFormat\":\"json\"}",
            "paramss":"properties={\"annotators\":\"tokenize,ner\",\"outputFormat\":\"json\"}",
            "json_paramss":{
                "properties":{
                    "annotators":"tokenize,ner",
                    "outputFormat":"json"
                }
            },
            "body":"$TEXT_DATA$"
        },
        "docker":{
            "name":"coreNLP",
            "image":"nlpbox/corenlp",
            "ports": {"9000/tcp":"9000"},
            "stdin_open":true,
            "tty":true,
            "environment":{
                "TIMEOUT_MILLISECONDS":"100000",
                "ANNOTATORS":"tokenize,ner"
            }
        }
    },
    "spacy":{
        "for_completeness": true,
        "request":{
            "url":"http://localhost:8080/ent",
            "bodyss": "{\"text\":\"$TEXT_DATA$\", \"model\":\"en\"}",
            "json_body": {
                "text":"$TEXT_DATA$",
                "model":"en"
            }
        },
        "docker":{
            "name":"spacy",
            "image":"jgontrum/spacyapi:en_v2",
            "ports":{"80/tcp":"8080"},
            "stdin_open":true,
            "tty":true
        }
    },
    
    
    "flair":{
        "for_completeness":true,
        "request":{
            "method":"GET",
            "url":"http://localhost:5000/",
            "params":"text=$TEXT_DATA$",
            "_json_params":{
                "text":"$TEXT_DATA$"
            },
            "parse_payload":{
                "\n\n":"\n"
            }
        },
        "docker":{
            "name":"flair",
            "image":"samhavens/flair-as-service:en-full",
            "ports":{"5000/tcp":"5000"},
            "stdin_open":true,
            "tty":true
        }
    },
    "rel":{
        "for_completeness": true,
        "request":{
            "url":"http://localhost:5555/ne",
            "_bodys": "{\"text\":\"$TEXT_DATA$\",\"tagger\":\"ner-fast-with-lowercase\"}",
            "json_body": {
                "text":"$TEXT_DATA$",
                "tagger":"ner-fast-with-lowercase"
            }
        },
        "response_type":"",
        "docker":{
            "name":"rel",
            "image":"informagi/rel",
            "ports": {"5555/tcp":"5555"},
            "stdin_open":true,
            "tty":true,
            "volumes":["$PWD$\\dockerize\\containers_data\\rel:/workspace/data"],
            "command":"python -m REL.server --bind 0.0.0.0 --port 5555 /workspace/data wiki_2019 --ner-model  ner-fast-with-lowercase"
        }
    },
    "consistency_checker":{
        "build":{
            "dockerfile":"$PWD$\\dockerize\\consistency_checker\\",
            "tag":"consistency_checker"
        },
        "request":{
            "url":"http://localhost:8000/",
            "json_params":{
                "file_name":"$TEXT_DATA_0$",
                "lang":"$TEXT_DATA_1$"
            },
            "paramss":"file_name=$TEXT_DATA_0$&lang=$TEXT_DATA_1$"
        },
        "docker":{
            "name":"consistency_checker",
            "image":"consistency_checker",
            "ports":{"8000/tcp":"8000"},
            "stdin_open":true,
            "tty":true,
            "volumes":["$PWD$\\dockerize\\containers_data\\spacy:/consistency/data"]
        },
        "gpu":true
    }
}